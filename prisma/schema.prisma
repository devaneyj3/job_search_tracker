generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String        @id @default(uuid()) @db.Uuid
  name            String        @default("NO_NAME")
  address         String?
  city            String?
  state           String?
  zip             String?
  email           String?       @unique
  phone           String?
  emailVerified   DateTime?     @db.Timestamp(6)
  image           String?
  profileComplete Boolean       @default(false)
  createdAt       DateTime      @default(now()) @db.Timestamp(6)
  updatedAt       DateTime      @updatedAt
  accounts        Account[]
  sessions        Session[]
  connections     Connection[]
  companies       Company[]
}

model Account {
  userId            String   @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now()) @db.Timestamp(6)
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@index([userId])
}

model Session {
  sessionToken String   @id
  userId       String   @db.Uuid
  expires      DateTime @db.Timestamp(6)
  createdAt    DateTime @default(now()) @db.Timestamp(6)
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}


model Connection {
  id                Int          @id @default(autoincrement())
  userId            String       @db.Uuid
  name              String
  email             String
  company           String
  position          String
  linkedinUrl       String
  connectedDate     DateTime?    @default(now()) @db.Timestamp(6)
  status            String
  statusDate        DateTime?
  emailSent         Boolean?      @default(false)
  firstEmailDate    DateTime?    @default(now()) @db.Timestamp(6)
  lastEmailDate     DateTime?    @default(now()) @db.Timestamp(6)
  emailCount        Int?          @default(0)
  responded         Boolean?      @default(false)
  responseDate      DateTime?    @db.Timestamp(6)
  notes             String?
  archived          Boolean?      @default(false)
  archivedDate      DateTime?    @db.Timestamp(6)
  createdAt         DateTime?     @default(now()) @db.Timestamp(6)
  updatedAt         DateTime?     @default(now()) @db.Timestamp(6)
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([emailSent])
  @@index([connectedDate])
  @@index([company])
  @@index([status])
}

model Company {
  id                Int          @id @default(autoincrement())
  userId            String       @db.Uuid
  name              String
  website           String?
  industry          String?
  size              String?
  location          String?
  description       String?
  linkedinUrl       String?
  status            String
  statusDate        DateTime?
  notes             String?
  archived          Boolean?      @default(false)
  archivedDate      DateTime?    @db.Timestamp(6)
  createdAt         DateTime?     @default(now()) @db.Timestamp(6)
  updatedAt         DateTime?     @default(now()) @db.Timestamp(6)
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([name])
  @@index([industry])
}
